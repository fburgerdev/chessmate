# GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  chessmate_config = debug
  example_config = debug
endif
ifeq ($(config),fast)
  chessmate_config = fast
  example_config = fast
endif
ifeq ($(config),dist)
  chessmate_config = dist
  example_config = dist
endif

PROJECTS := chessmate example

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

chessmate:
ifneq (,$(chessmate_config))
	@echo "==== Building chessmate ($(chessmate_config)) ===="
	@${MAKE} --no-print-directory -C . -f chessmate.make config=$(chessmate_config)
endif

example: chessmate
ifneq (,$(example_config))
	@echo "==== Building example ($(example_config)) ===="
	@${MAKE} --no-print-directory -C . -f example.make config=$(example_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f chessmate.make clean
	@${MAKE} --no-print-directory -C . -f example.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug"
	@echo "  fast"
	@echo "  dist"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   chessmate"
	@echo "   example"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"