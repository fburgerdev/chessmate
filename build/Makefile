# GNU Make workspace makefile autogenerated by Premake

.NOTPARALLEL:

ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  engine_config = debug
  server_config = debug
endif
ifeq ($(config),release)
  engine_config = release
  server_config = release
endif
ifeq ($(config),dist)
  engine_config = dist
  server_config = dist
endif

PROJECTS := engine server

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

engine:
ifneq (,$(engine_config))
	@echo "==== Building engine ($(engine_config)) ===="
	@${MAKE} --no-print-directory -C . -f engine.make config=$(engine_config)
endif

server: engine
ifneq (,$(server_config))
	@echo "==== Building server ($(server_config)) ===="
	@${MAKE} --no-print-directory -C . -f server.make config=$(server_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f engine.make clean
	@${MAKE} --no-print-directory -C . -f server.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug"
	@echo "  release"
	@echo "  dist"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   engine"
	@echo "   server"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"